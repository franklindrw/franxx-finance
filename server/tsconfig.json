{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es2018"],
    "types": ["node", "fastify"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}